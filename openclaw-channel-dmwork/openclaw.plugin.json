{
  "id": "dmwork",
  "channels": ["dmwork"],
  "configSchema": {
    "type": "object",
    "required": ["botToken", "apiUrl"],
    "properties": {
      "botToken": {
        "type": "string",
        "description": "Bot token from BotFather (bf_ prefix)"
      },
      "apiUrl": {
        "type": "string",
        "description": "DMWork server API URL (e.g. http://192.168.1.100:8090)"
      },
      "wsUrl": {
        "type": "string",
        "description": "WuKongIM WebSocket URL (auto-detected from register if omitted)"
      }
    },
    "additionalProperties": true
  }
}
